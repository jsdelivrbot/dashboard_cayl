.header
  position fixed
  top 0
  width 100%
  height 70px
  line-height 70px
  background url(/img/bg_2.png) repeat
  text-align right
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
  z-index 5

  .brand-logo
    position absolute
    top 5px
    left 30px
    transform scale(0.4)
    transform-origin left top